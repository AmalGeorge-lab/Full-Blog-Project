<form action="/posts/edit/<%= post._id %>" method="post" class="edit-post-section" enctype="multipart/form-data">
    <div style="display: flex; flex-direction: column; row-gap: 10px;">
        <label for="title">Title :</label>
        <input type="text" name="title" id="title" value="<%= post.title %>">
    </div>
    <div style="display: flex; flex-direction: column; row-gap: 10px;">
        <label for="content">Content :</label>
        <textarea name="content" id="content"><%= post.content %></textarea>
    </div>
    <div>
        <label for="">Images :</label>
        <input type="file" name="images" multiple>
    </div>
    <div style="display: flex; column-gap: 10px;">
        <% post?.images.forEach((image)=>{ %>
            <img src="<%= image.url %>" alt="image" style="height: 200px; padding: 5px; border: 1px solid gray;">
        <% }) %>
    </div>
    <button type="submit" style="background-color: rgb(255, 0, 128); padding: 10px 0; border: none; color: white; font-size: 20px; border-radius: 10px;">Submit</button>
</form>