<div class="login-section">
    <h1>Login</h1>
    <% if(error) { %>
        <div class="error-message"><%= error %></div>
    <% } %>

    <form action="http://localhost:5000/auth/login" method="post" class="login-form">
        <input type="email" name="email" placeholder="Email" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit" class="submit-button"><i class="fa-solid fa-right-to-bracket" style="margin-right: 10px;"></i>Login</button>
    </form>

</div>